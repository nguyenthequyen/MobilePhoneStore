
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using MobilePhoneStore.Web.ViewModels;
@model RegisterViewModel
<div class="customer_login mt-60">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-7">
                <div class="card" style="width: 100%;">
                    <div class="card-body">
                        <div class="account_form register">
                            <h2 class="text-center">Đăng ký tài khoản</h2>
                            <form method="post" asp-action="Register" asp-controller="Account">
                                <p>
                                    <label asp-for="LastName"></label>
                                    <input type="text" asp-for="LastName">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </p>
                                <p>
                                    <label asp-for="FirstName"></label>
                                    <input type="text" asp-for="FirstName">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </p>
                                <p>
                                    <label asp-for="Username"></label>
                                    <input type="text" asp-for="Username">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </p>
                                <p>
                                    <label asp-for="Password"></label>
                                    <input type="password" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </p>
                                <p>
                                    <label asp-for="ConfirmPassword"></label>
                                    <input type="password" asp-for="ConfirmPassword">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </p>
                                <div class="login_submit">
                                    <a asp-action="Login" asp-controller="Account" class="text-primary">Quay lại đăng nhập</a>
                                    <button type="submit">Đăng ký</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

