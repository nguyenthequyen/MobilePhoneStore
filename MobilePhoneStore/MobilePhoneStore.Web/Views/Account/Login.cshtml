
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using MobilePhoneStore.Models.ViewModels;
@model LoginViewModel
<div class="customer_login mt-60">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-7">
                <div class="card" style="width: 100%;">
                    <div class="card-body">
                        <div class="account_form register">
                            <h2 class="text-center">Đăng nhập</h2>
                            <form method="post" asp-action="Login" asp-controller="Account">
                                <p>
                                    <label asp-for="Username"></label>
                                    <input type="text" asp-for="Username">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </p>
                                <p>
                                    <label asp-for="Password"></label>
                                    <input type="text" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </p>
                                <div class="login_submit">
                                    <a asp-action="ForgotPassword" asp-controller="Account" class="text-primary">Quên mật khẩu?</a>
                                    <label asp-for="RememberLogin">
                                        <input asp-for="RememberLogin" type="checkbox">
                                        Ghi nhớ đăng nhập
                                    </label>
                                    <button type="submit">Đăng nhập</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

