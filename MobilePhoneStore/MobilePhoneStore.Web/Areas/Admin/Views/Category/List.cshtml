
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card mb-0 justify-content-end">
                    <div class="card-body">
                        <a href="/Admin/Category/Create" class="btn btn-primary btn-sm float-right">Thêm danh mục</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form class="form-horizontal">
                        <div class="card-body pt-0">
                            <h4 class="card-title">Tìm kiếm sản phẩm</h4>
                            <div class="form-group col">
                                <input type="text" class="form-control" id="fname" placeholder="Nhập tên sản phẩm, danh mục hoặc màu sắc, ...">
                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body justify-content-end float-right">
                                <button type="button" class="btn btn-primary">Tìm kiếm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title m-b-0">Danh sách danh mục</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer text-center">
        All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com">WrapPixel</a>.
    </footer>
</div>
@section scripts{}