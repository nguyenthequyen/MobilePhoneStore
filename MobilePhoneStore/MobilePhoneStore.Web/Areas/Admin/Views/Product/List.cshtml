
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using MobilePhoneStore.Models
@{
    var product = ViewData["Product"] as List<Product>;
}
<div class="page-wrapper">
    <img src="/product/img_product/9217c682-4caf-41d3-9081-6f2a3b662c7e.jpg" />
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Form Basic</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card mb-0 justify-content-end">
                    <div class="card-body">
                        <a href="/Admin/Product/Create" class="btn btn-primary btn-sm float-right">Thêm sản phẩm</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form class="form-horizontal">
                        <div class="card-body pt-0">
                            <h4 class="card-title">Tìm kiếm sản phẩm</h4>
                            <div class="form-group col">
                                <input type="text" class="form-control" id="fname" placeholder="Nhập tên sản phẩm, danh mục hoặc màu sắc, ...">
                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body justify-content-end float-right">
                                <button type="button" class="btn btn-primary">Tìm kiếm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title m-b-0">Danh sách sản phẩm</h5>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Hình ảnh</th>
                                <th scope="col">Tên sản phẩm</th>
                                <th scope="col">SKU</th>
                                <th scope="col">Giá cũ</th>
                                <th scope="col">Giá mới</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Danh mục</th>
                                <th scope="col">Sửa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (product.Count <= 0)
                            {
                                <tr>
                                    <td colspan="9">Không có sản phẩm nào</td>
                                </tr>
                            }
                            else
                            {
                                int i = 1;
                                foreach (var item in product)
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td><img src="@item.ImageThumbnail" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.SKU</td>
                                        <th scope="col">@item.OldPrice</th>
                                        <th scope="col">@item.Price</th>
                                        <th scope="col">@item.Quantity</th>
                                        <th scope="col">@item.Model</th>
                                        <th scope="col">Sửa</th>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com">WrapPixel</a>.
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
@section scripts{}